<!-- ロード画面関連の記述 -->
<style>
.page-loader {
  position: fixed;
  display: flex;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  justify-content: center;
  align-items: center;
  z-index: 10000;
}
</style>

<script>

// 10秒たったら強制的にロード画面を非表示
document.addEventListener('DOMContentLoaded', () => {
  setTimeout(() => {
    const pageLoader = document.getElementById('js-page-loader');
    if(pageLoader) {
      document.getElementById('js-page-loader').style.display = 'none';
    }
  }, 10000);
}, false);
</script>
